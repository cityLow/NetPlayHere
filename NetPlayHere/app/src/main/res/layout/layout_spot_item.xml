<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/spot_iv"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center"
        android:scaleType="center"/>

    <RelativeLayout
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/spot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="景点名称"/>

        <TextView
            android:id="@+id/spot_description"
            android:layout_below="@id/spot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:maxLines="3"
            tools:text="景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述景点描述"/>

        <TextView
            android:id="@+id/spot_address"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            tools:text="景点地址"/>

    </RelativeLayout>
</LinearLayout>